<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlTutorItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@id/llText"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/a1"
                app:riv_corner_radius="4dip" />

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/imageView1"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/tvNameT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Michael Thomas"
                    android:textColor="#59474b"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvExpT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="35 Years Experience"
                    android:textColor="#99a2b3"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvSubjectT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Indonesia"
                    android:textColor="#99a2b3"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvPriceT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="2dp"
                    android:text="Rp 10.000"
                    android:textColor="#1C77BA"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>